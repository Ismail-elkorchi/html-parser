{
  "version": 1,
  "profiles": {
    "ci": {
      "requireHoldouts": false,
      "requireBrowserDiff": false,
      "requireDeno": true,
      "requireBun": true,
      "requireBrowserSmoke": false
    },
    "release": {
      "requireHoldouts": true,
      "requireBrowserDiff": true,
      "requireDeno": true,
      "requireBun": true,
      "requireBrowserSmoke": false
    }
  },
  "thresholds": {
    "conformance": {
      "tokenizer": {
        "minPassRate": 1,
        "maxSkips": 0
      },
      "tree": {
        "minPassRate": 1,
        "maxSkips": 0
      },
      "encoding": {
        "minPassRate": 1,
        "maxSkips": 0
      },
      "serializer": {
        "minPassRate": 1,
        "maxSkips": 0
      },
      "holdout": {
        "minPassRate": 1,
        "maxSkips": 0
      }
    },
    "browserDiff": {
      "minAgreement": 0.999,
      "minEnginesPresent": 3
    },
    "determinism": {
      "requireNode": true
    },
    "budgets": {
      "requireBudgetsReport": true,
      "requireNoHangs": true,
      "requireStructuredBudgetErrors": true
    },
    "packaging": {
      "forbiddenPaths": [
        "vendor/",
        "test/",
        "codex-prompts/",
        "scripts/"
      ]
    }
  },
  "weights": {
    "correctness": 40,
    "browserDiff": 20,
    "performance": 15,
    "robustness": 10,
    "agentFirst": 10,
    "packagingTrust": 5
  },
  "performanceBaseline": {
    "notes": "Set after stable reference build on your hardware/CI.",
    "benchmarks": {
      "parse-medium": {
        "mbPerSec": 50,
        "memoryMB": 150
      }
    }
  },
  "scoring": {
    "passRateScoreShape": "fromThresholdToPerfect",
    "browserAgreementAggregation": "min",
    "performanceAggregation": "geometricMean"
  }
}
